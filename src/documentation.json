{
    "bot_name": "Aurora",
    "description": "Bot Discord multifonction avec modération, XP, tickets et plus encore",
    "categories": {
        "moderation": {
            "name": "Modération",
            "commands": [
                {
                    "name": "ban",
                    "description": "Bannir un utilisateur du serveur",
                    "usage": "/ban <utilisateur> [raison]",
                    "permissions": "BAN_MEMBERS"
                },
                {
                    "name": "unban",
                    "description": "Débannir un utilisateur",
                    "usage": "/unban ID_utilisateur",
                    "permissions": "BAN_MEMBERS"
                },
                {
                    "name": "kick",
                    "description": "Expulser un utilisateur du serveur",
                    "usage": "/kick <utilisateur> [raison]",
                    "permissions": "KICK_MEMBERS"
                },
                {
                    "name": "mute",
                    "description": "Rendre muet un utilisateur temporairement",
                    "usage": "/mute <utilisateur> <durée> [raison]",
                    "permissions": "MODERATE_MEMBERS"
                },
                {
                    "name": "unmute",
                    "description": "Retirer le mute d'un utilisateur",
                    "usage": "/unmute @utilisateur",
                    "permissions": "MODERATE_MEMBERS"
                },
                {
                    "name": "clear",
                    "description": "Supprimer un nombre spécifié de messages",
                    "usage": "/clear <nombre>",
                    "permissions": "MANAGE_MESSAGES"
                },
                {
                    "name": "lockdown",
                    "description": "Verrouiller un salon",
                    "usage": "/lockdown [salon] [durée]",
                    "permissions": "MANAGE_CHANNELS"
                },
                {
                    "name": "raidmode",
                    "description": "Activer/désactiver le mode raid",
                    "usage": "/raidmode [on/off]",
                    "permissions": "MANAGE_GUILD"
                }
            ]
        },
        "warnings": {
            "name": "Système d'avertissements",
            "commands": [
                {
                    "name": "warn",
                    "description": "Avertir un utilisateur",
                    "usage": "/warn <utilisateur> <raison>",
                    "permissions": "MODERATE_MEMBERS"
                },
                {
                    "name": "unwarn",
                    "description": "Supprimer un avertissement",
                    "usage": "/unwarn @utilisateur ID_avertissement",
                    "permissions": "MODERATE_MEMBERS"
                },
                {
                    "name": "warnings",
                    "description": "Voir les avertissements d'un utilisateur",
                    "usage": "/warnings [@utilisateur]",
                    "permissions": "MODERATE_MEMBERS"
                }
            ]
        },
        "xp_system": {
            "name": "Système d'XP",
            "commands": [
                {
                    "name": "xp",
                    "description": "Voir l'XP d'un utilisateur",
                    "usage": "/xp [utilisateur]",
                    "permissions": "No perm required"
                },
                {
                    "name": "leaderboard",
                    "description": "Afficher le classement des niveaux",
                    "usage": "/leaderboard",
                    "permissions": "No perm required"
                },
                {
                    "name": "setxp",
                    "description": "Définir l'XP d'un utilisateur",
                    "usage": "/setxp @utilisateur montant",
                    "permissions": "ADMINISTRATOR"
                },
                {
                    "name": "resetxp",
                    "description": "Réinitialiser l'XP d'un utilisateur",
                    "usage": "/resetxp @utilisateur",
                    "permissions": "ADMINISTRATOR"
                }
            ]
        },
        "tickets": {
            "name": "Système de Tickets",
            "commands": [
                {
                    "name": "ticket create",
                    "description": "Créer un nouveau ticket de support",
                    "usage": "/ticket create <raison>",
                    "permissions": "No perm required"
                },
                {
                    "name": "ticket close",
                    "description": "Fermer un ticket",
                    "usage": "/ticket close [raison]",
                    "permissions": "No perm required"
                },
                {
                    "name": "ticket add",
                    "description": "Ajouter un membre au ticket",
                    "usage": "/ticket add @utilisateur",
                    "permissions": "No perm required"
                },
                {
                    "name": "ticket remove",
                    "description": "Retirer un membre du ticket",
                    "usage": "/ticket remove @utilisateur",
                    "permissions": "No perm required"
                }
            ]
        },
        "utility": {
            "name": "Utilitaires",
            "commands": [
                {
                    "name": "ping",
                    "description": "Voir la latence du bot",
                    "usage": "/ping",
                    "permissions": "No perm required"
                },
                {
                    "name": "avatar",
                    "description": "Afficher l'avatar d'un utilisateur",
                    "usage": "/avatar [@utilisateur]",
                    "permissions": "No perm required"
                },
                {
                    "name": "userinfo",
                    "description": "Afficher les informations d'un utilisateur",
                    "usage": "/userinfo [@utilisateur]",
                    "permissions": "No perm required"
                },
                {
                    "name": "serverstats",
                    "description": "Afficher les statistiques du serveur",
                    "usage": "/serverstats",
                    "permissions": "No perm required"
                }
            ]
        },
        "configuration": {
            "name": "Configuration",
            "commands": [
                {
                    "name": "config automod",
                    "description": "Configurer l'AutoMod",
                    "usage": "/config automod <enable|disable|limits|words> [options]",
                    "permissions": "ADMINISTRATOR"
                },
                {
                    "name": "config logs",
                    "description": "Configurer les canaux de logs",
                    "usage": "/config logs <set|remove> <type> [salon]",
                    "permissions": "ADMINISTRATOR"
                },
                {
                    "name": "config welcome",
                    "description": "Configurer le message de bienvenue",
                    "usage": "/config welcome <channel|message> [options]",
                    "permissions": "ADMINISTRATOR"
                },
                {
                    "name": "config xp",
                    "description": "Configurer le système d'XP",
                    "usage": "/config xp <enable|disable|settings> [options]",
                    "permissions": "ADMINISTRATOR"
                },
                {
                    "name": "config anti-raid",
                    "description": "Configurer la protection anti-raid",
                    "usage": "/config anti-raid <enable|disable|threshold> [options]",
                    "permissions": "ADMINISTRATOR"
                }
            ]
        }
    }
} 